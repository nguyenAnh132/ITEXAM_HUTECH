@using ITExam.ViewModels.Exam
@model MultipleChoiceExamResultVM
 <!DOCTYPE html> 
 <html lang="vi"> 
 <head> 
     <meta charset="UTF-8"> 
     <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
     <title>Kết quả bài thi</title> 

     <!-- Bootstrap 5.3 --> 
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 

     <!-- FontAwesome --> 
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" /> 

     <!-- Google Font --> 
     <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&display=swap" rel="stylesheet"> 
     <link rel="stylesheet" href="~/css/student-exam-result.css" /> 
 </head> 
 <body> 

     <div class="card-result m-3"> 
         <h2><i class="fa-solid fa-clipboard-check me-2"></i>Kết quả bài thi</h2> 
         <div class="score-display">@Model.Score / 10</div> 

         <div class="info text-start mt-4"> 
             <p class="fs-5"><i class="fa-regular fa-calendar-days"></i><strong>Ngày làm bài:</strong> @Model.ExamDate.ToString("dd/MM/yyyy")</p> 
             <p class="fs-5"><i class="fa-solid fa-stopwatch"></i><strong>Thời gian làm bài:</strong> @(Model.Duration/60):@(Model.Duration%60)</p> 
             <p class="fs-5"><i class="fa-solid fa-check-double"></i><strong>Số câu đúng:</strong> @Model.CorrectAnswers / @Model.QuestionCount</p> 
         </div> 

         <div class="mt-4 text-start fs-5"> 
             <label class="mb-1"><strong>Độ chính xác</strong></label> 
             <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.AccuracyRate%;" aria-valuenow="80"
                     aria-valuemin="0" aria-valuemax="100">
                    @Model.AccuracyRate%
                </div> 
             </div> 
         </div> 
         <a asp-controller="Student" asp-action="ClassDetail" asp-route-id="@Model.ClassId">
             <button class="btn btn-primary btn-back"> 
                 <i class="fa-solid fa-arrow-left me-2"></i>Quay lại 
             </button>
        </a>
     </div> 

     <!-- Bootstrap Bundle --> 
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
 </body> 
 </html> 
