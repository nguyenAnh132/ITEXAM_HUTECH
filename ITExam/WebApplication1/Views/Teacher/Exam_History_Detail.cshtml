@using Newtonsoft.Json
@model ITExam.ViewModels.Exam.ExamHistoryVM
@{
    Layout = "_TeacherLayout";
    ViewData["Title"] = "Chi tiết lịch sử làm bài";
}

@section Style {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/history-detail-exam.css" />
}
<div class="container-fluid p-0">
    <div class="pt-3 py-lg-0 px-lg-5 px-3">
        <div class="">
            <div class="d-flex justify-content-between pt-3 my-2 ">
            <!-- Nav tabs -->
                <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active border rounded fw-bold" 
                                style="color:#646cff ;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;"
                                id="create-tab" data-bs-toggle="tab" data-bs-target="#create" type="button"
                                role="tab" aria-controls="create" aria-selected="false">
                            Chi tiết lịch sử làm bài
                        </button>
                    </li>
                </ul>
                <div class="">
                    <a asp-controller="Teacher" asp-action="List_Student_Do_Test"asp-route-id="@Model.ExamId" asp-route-maLopHoc="@(Model.ClassId)">
                        <button class="btn btn-danger">Trở về</button>
                    </a>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <div class="tab-content">
                <div class="tab-pane active" id="create" role="tabpanel" aria-labelledby="create-tab">
                    <div class="row">
                        <!-- Kết quả làm bài (right side) -->
                        <div class="col-12 col-md-4">
                            <div class="card shadow">
                                <div class="card-header bg-primary ">
                                    <h5 class="mx-2 mb-0 text-white">Kết quả làm bài</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong class="mx-2">Tên đề:</strong> @Model.ExamName</p>
                                    <p><strong class="mx-2">Thời gian bắt đầu:</strong> @Model.StartTime</p>
                                    <p><strong class="mx-2">Thời gian nộp:</strong> @Model.SubmitTime</p>
                                    <p><strong class="mx-2">Điểm:</strong> @Model.Score</p>
                        
                                <hr/>
                                    <p class="fw-bold text-warning mx-2">Lưu ý:</p>
                                    <p class="fw-bold mx-2">Bên trên câu trả lời của sinh viên là đáp án đúng</p>
                                    <p class="fw-bold">
                                        <span class="text-success mx-2 fw-bold">[Đúng]</span>
                                        <span class="text-danger mx-2 fw-bold">[Sai]</span>
                                        : Kết quả sinh viên chọn 
                                    </p>

                                </div>
                            </div>
                        </div>

                        <!-- Chi tiết làm bài của sinh viên (left side) -->
                        <div class="col-12 col-md-8">
                            <div class="bg-white p-3 rounded" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;">
                                @foreach (var item in Model.ExamDetails)
                                {
                                    <div class="border rounded p-2 question">
                                        <div class="d-flex">
                                            <p class="fw-bold mx-2">Câu hỏi:</p>
                                            @Html.Raw(item.QuestionContent)
                                        </div>

                                        <div>
                                            @foreach (var option in JsonConvert.DeserializeObject<List<dynamic>>(item.ChoiceContent))
                                            {
                                                var isCorrect = option.LaDapAn != null && option.LaDapAn.ToObject<bool>();
                                                if (item.QuestionType == "2")
                                                {
                                                    <div class="border rounded p-2 d-flex mb-2 answer-option-multi">
                                                        <input class="mx-2" disabled type="checkbox"
                                                               name="answer_multi_@item.QuestionContent"
                                                               value="@option.Id" data-correct="@(isCorrect ? "true" : "false")"
                                                        @(isCorrect ? "checked" : "") />
                                                        <div class="noiDungLuaChon">@Html.Raw(option.NoiDung.ToString())</div>
                                                    </div>
                                                }
                                                else if (item.QuestionType == "1")
                                                {
                                                    <div class="border rounded p-2 d-flex mb-2 answer-option-single">
                                                        <input class="mx-2" disabled type="radio"
                                                               name="answer_single_@item.QuestionContent"
                                                               value="@option.Id" data-correct="@(isCorrect ? "true" : "false")"
                                                        @(isCorrect ? "checked" : "") />
                                                        <div class="noiDungLuaChon">@Html.Raw(option.NoiDung.ToString())</div>
                                                    </div>
                                                }
                                                else if (item.QuestionType == "3")
                                                {
                                                    <div class="border rounded p-2 d-flex mb-2 answer-option-truefalse">
                                                        <input class="mx-2" disabled type="radio"
                                                               name="answer_truefalse_@item.QuestionContent"
                                                               value="@option.Id" data-correct="@(isCorrect ? "true" : "false")"
                                                        @(isCorrect ? "checked" : "") />
                                                        <div class="noiDungLuaChon">@Html.Raw(option.NoiDung.ToString())</div>
                                                    </div>
                                                }
                                            }



                                        </div>

                                        <!-- Phần câu trả lời của sinh viên -->
                                        <div class="border rounded p-2">
                                            <p class="mb-0 fw-bold">Câu trả lời của sinh viên:</p>

                                            <div class="p-2">
                                                @if (!string.IsNullOrEmpty(item.MultipleChoiceAnswer) && item.QuestionType == "1")
                                                {
                                                    var answers = item.MultipleChoiceAnswer.Split(',');
                                                    foreach (var answer in answers)
                                                    {
                                                        var option = JsonConvert.DeserializeObject<List<dynamic>>(item.ChoiceContent)
                                                        .FirstOrDefault(o => o.Id.ToString() == answer);

                                                        if (option != null)
                                                        {
                                                            <div class="d-flex fw-bold">
                                                                @Html.Raw(option.NoiDung.ToString())
                                                                @if (option.LaDapAn.ToObject<bool>())
                                                                {
                                                                    <span class="text-success mx-2">[Đúng]</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-danger mx-2">[Sai]</span>
                                                                }
                                                            </div>
                                                        }
                                                    }
                                                }
                                                else if (!string.IsNullOrEmpty(item.MultipleChoiceAnswer) && item.QuestionType == "3")
                                                {
                                                    var answers = item.MultipleChoiceAnswer.Split(',');
                                                    foreach (var answer in answers)
                                                    {
                                                        var option = JsonConvert.DeserializeObject<List<dynamic>>(item.ChoiceContent)
                                                        .FirstOrDefault(o => o.Id.ToString() == answer);

                                                        if (option != null)
                                                        {
                                                            <div class="d-flex fw-bold">
                                                                @Html.Raw(option.NoiDung.ToString())
                                                                @if (option.LaDapAn.ToObject<bool>())
                                                                {
                                                                    <span class="text-success mx-2">[Đúng]</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-danger mx-2">[Sai]</span>
                                                                }
                                                            </div>
                                                        }
                                                    }
                                                }
                                                else if (!string.IsNullOrEmpty(item.EssayAnswer))
                                                {
                                                    <p class="fw-bold">Câu trả lời tự luận: @Html.Raw(item.EssayAnswer)</p>
                                                }
                                                else if (item.QuestionType == "2")
                                                {
                                                    var luaChonList = JsonConvert.DeserializeObject<List<dynamic>>(item.ChoiceContent);
                                                    var selectedAnswers = item.MultipleChoiceAnswer.Split(',');

                                                    var selectedAnswersList = selectedAnswers.ToList();

                                                    foreach (var option in luaChonList)
                                                    {
                                                        bool isChecked = selectedAnswersList.Contains(option.Id.ToString());

                                                        <div class="p-2 d-flex">
                                                            <div class="noiDungLuaChon">@Html.Raw(option.NoiDung.ToString())</div>

                                                            @if (isChecked)
                                                            {
                                                                @if (option.LaDapAn.ToObject<bool>())
                                                                {
                                                                    <span class="text-success fw-bold mx-2">[Đúng]</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-danger fw-bold mx-2">[Sai]</span>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted fw-bold mx-2">Chưa chọn</span>
                                                            }
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <p class="text-muted">Sinh viên chưa trả lời câu hỏi này.</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        var ChiTietList = @Html.Raw(JsonConvert.SerializeObject(Model));
        console.log("Danh sách chi tiết lịch sử làm bài:", ChiTietList);

        document.addEventListener("DOMContentLoaded", function () {
            const message = @Html.Raw(Json.Serialize(TempData["SuccessMessage"]));
            if (message) {
                Toastify({
                    text: message,
                    duration: 4000,
                    close: true,
                    gravity: "bottom",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: "#28a745"
                    }
                }).showToast();
            }
        });
        document.addEventListener("DOMContentLoaded", function () {
            const chiTietCauHoi = document.querySelectorAll('.question');

            chiTietCauHoi.forEach(function (question) {
                // Xử lý riêng phần loại 1
                const singleOptions = question.querySelectorAll('.answer-option-single');
                singleOptions.forEach(function (optionDiv) {
                    const input = optionDiv.querySelector('input');
                    if (input) {
                        const isChecked = input.checked;
                        const isCorrect = input.getAttribute("data-correct")?.toLowerCase() === "true";

                        if (isChecked && isCorrect) {
                            optionDiv.style.backgroundColor = "#8BE78B"; // Xanh lá
                        }
                    }
                });

                // Xử lý riêng phần loại 3
                const trueFalseOptions = question.querySelectorAll('.answer-option-truefalse');
                trueFalseOptions.forEach(function (optionDiv) {
                    const input = optionDiv.querySelector('input');
                    if (input) {
                        const isChecked = input.checked;
                        const isCorrect = input.getAttribute("data-correct")?.toLowerCase() === "true";

                        if (isChecked && isCorrect) {
                            optionDiv.style.backgroundColor = "#8BE78B"; // Xanh lá
                        }
                    }
                });

                // Nếu muốn xử lý loại 2 (checkbox nhiều đáp án)
                const multiOptions = question.querySelectorAll('.answer-option-multi');
                multiOptions.forEach(function (optionDiv) {
                    const input = optionDiv.querySelector('input');
                    if (input) {
                        const isChecked = input.checked;
                        const isCorrect = input.getAttribute("data-correct")?.toLowerCase() === "true";

                        if (isChecked && isCorrect) {
                            optionDiv.style.backgroundColor = "#8BE78B"; // Xanh lá
                        }
                    }
                });
            });
        });




    </script>
}
