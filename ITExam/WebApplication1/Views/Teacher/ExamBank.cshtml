@section Script {
    <script>
        
        document.addEventListener("DOMContentLoaded", function () {
            const message = @Html.Raw(Json.Serialize(TempData["SuccessMessage"]));
            if (message) {
                Toastify({
                    text: message,
                    duration: 4000,
                    close: true,
                    gravity: "bottom",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: "#28a745"
                    }
                }).showToast();
            }
        });
    </script>

    <script>
       function searchItems(inputId, containerSelector) {
        const keyword = document.getElementById(inputId).value
            .toLowerCase()
            .normalize("NFD").replace(/[\u0300-\u036f]/g, "").trim();

        const container = document.querySelector(containerSelector);
        if (!container) return;

        const items = Array.from(container.children);
        const scored = items.map(el => {
            const text = el.innerText
                .toLowerCase()
                .normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            const score = text.includes(keyword) ? 1 : 0;
            return { el, score };
        });

        scored.sort((a, b) => b.score - a.score);
        scored.forEach(({ el, score }) => {
            el.style.display = keyword === '' || score > 0 ? '' : 'none';
            container.appendChild(el);
        });
    }

            function showDeleteModal(maNHD) {
            fetch(`/Teacher/GetExamsByExamBank?maNHD=${maNHD}`)
                .then(res => res.json())
                .then(data => {
                    let body = document.getElementById("deleteNHDModalBody");
                    let footer = document.getElementById("deleteNHDModalFooter");

                    if (data.length === 0) {
                        // Không có đề thi => modal bình thường
                        body.innerHTML = `
                            <p>
                                ⚠️ Bạn có chắc chắn muốn xóa ngân hàng đề này không?<br/>
                                <span class="text-danger">Toàn bộ câu hỏi, đáp án liên quan sẽ bị xóa.</span>
                            </p>
                            <form method="post" action="/Teacher/XoaNganHangDe">
                                <input type="hidden" name="maNHD" value="${maNHD}" />
                                <div class="d-flex justify-content-end">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    <button type="submit" class="btn btn-danger ms-2">Xác nhận xóa</button>
                                </div>
                            </form>
                        `;
                        footer.innerHTML = "";
                    } else {
                        // Có đề thi => hiển thị danh sách + nút xóa từng đề
                        let list = "<ul class='list-group'>";
                        data.forEach(e => {
                            list += `
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>${e.examName} (Ngày tạo: ${new Date(e.createdDate).toLocaleDateString()})</span>
                                    <button class="btn btn-sm btn-danger" onclick="deleteExam(${e.examId}, ${maNHD})">Xóa đề</button>
                                </li>`;
                        });
                        list += "</ul>";

                        body.innerHTML = `
                            <p class="text-danger">Ngân hàng đề này vẫn còn các đề thi sau, hãy xóa hết đề thì mới xóa được ngân hàng:</p>
                            ${list}
                        `;
                        footer.innerHTML = `
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        `;
                    }

                    // Hiển thị modal
                    new bootstrap.Modal(document.getElementById("deleteNHDModal")).show();
                });
        }

        function deleteExam(examId, maNHD) {
            if (!confirm("Bạn có chắc chắn muốn xóa đề thi này không?")) return;
            fetch('/Teacher/DeleteExamByExamBank', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `examId=${examId}`
            }).then(res => {
                if (res.ok) {
                    alert("Đã xóa đề thi!");
                    showDeleteModal(maNHD); // load lại danh sách
                } else {
                    alert("Xóa đề thi thất bại!");
                }
            });
        }
                    document.addEventListener("DOMContentLoaded", function () {
            const buttons = document.querySelectorAll(".btn-xoa-nhd");
            buttons.forEach(function (button) {
                button.addEventListener("click", function () {
                    const ExamBankId = button.getAttribute("data-id");
                    showDeleteModal(ExamBankId); // ✅ Gọi hàm load modal động
                });
            });
        });


    </script>
}




